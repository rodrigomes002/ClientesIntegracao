@model ClientesIntegracao.Models.ClienteRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TokenEgestor" class="control-label"></label>
                <input asp-for="TokenEgestor" class="form-control" />
                <span asp-validation-for="TokenEgestor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TokenMovidesk" class="control-label"></label>
                <input asp-for="TokenMovidesk" class="form-control" />
                <span asp-validation-for="TokenMovidesk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}